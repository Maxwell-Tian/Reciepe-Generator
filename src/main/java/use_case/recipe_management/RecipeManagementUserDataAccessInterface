package use_case.recipe_management;

import entity.Ingredient;
import entity.Recipe;
import entity.User;

import java.util.List;

/**
 * The interface of the DAO for the recipe management Use Case.
 */
public interface RecipeManagementUserDataAccessInterface {

    /**
     * Get all recipes' name.
     * @return The list of recipes
     */
    List<String> getRecipeNames();

    /**
     * Get the details of recipes according to recipes' names.
     * @param recipeName Recipes' name
     * @return Recipes' content
     */
    String getRecipeDetails(String recipeName);
}
